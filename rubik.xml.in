<?xml version="1.0"?>
<compiz>
	<plugin name="rubik" useBcop="true">
		<short>Rubik's Cube</short>
		<long>Turn cube into a Rubik's cube</long>
		<category>Extras</category>
		<deps>
		<relation type="after">
			<plugin>cube</plugin>
		</relation>
		<requirement>
			<plugin>cube</plugin>
		</requirement>
		</deps>
		<display>
			<option name="toggle_key" type="key">
				<short>Toggle Rubik's cube</short>
				<long>Start/stop Rubik's cube effect.</long>
			</option>
			<option name="toggle_button" type="button">
				<_short>Toggle Rubik's cube</_short>
				<_long>Start/stop Rubik's cube effect.</_long>
			</option>
		</display>

		<screen>
				<option name="speed_factor" type="float">
					<short>Speed factor</short>
					<long>Multiply the speed of rotations by this factor.</long>
					<default>1</default>
					<min>0.1</min>
					<max>5</max>
					<precision>0.01</precision>
				</option>
				<option name="horizontal_size" type="int">
					<short>Horizontal Size</short>
					<long>Number of horizontal strips.</long>
					<default>3</default>
					<min>1</min>
					<max>10</max>
				</option>
				<option name="vertical_size" type="int">
					<short>Vertical Size</short>
					<long>Number of vertical strips.</long>
					<default>3</default>
					<min>1</min>
					<max>10</max>
				</option>
				<option name="rotate_horizontally" type="bool">
					<short>Rotate Horizontally</short>
					<long>Rotate Rubik's cube horizontally instead of vertically.</long>
					<default>false</default>
				</option>
				<option name="enable_on_manual_rotate" type="bool">
					<short>On manual rotate</short>
					<long>Enable effect only on cube rotate.</long>
					<default>true</default>
				</option>
				<option name="rotate_desktop" type="bool">
					<short>Rotate desktop</short>
					<long>Rotate desktop as well as windows.</long>
					<default>true</default>
				</option>
				<option name="colored_sides" type="bool">
					<short>Colored Sides</short>
					<long>Replace wallpaper with colored sides.</long>
					<default>false</default>
				</option>
				<option name="enable_depth_test" type="bool">
					<short>Enable Depth Test</short>
					<long>Hide windows that are behind other windows.</long>
					<default>true</default>
				</option>
		</screen>
	</plugin>
</compiz>
